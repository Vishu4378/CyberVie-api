{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",  
    "sourceMap": true,                             
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true ,
    "rootDir": "./src",
    "baseUrl": "./src",                              
    "outDir": "./dist",
    "moduleResolution": "Node16"
  },
  "exclude": ["./public"]
}
